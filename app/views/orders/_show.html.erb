<div class = "container text-center">
<h1>Merci pour votre achat ! </h1>
  <p>Voici le detail de votre commande : </p>
<div class="table-responsive">

  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Produit</th>
      <th>Titre</th>
      <th>Description</th>
      <th>Quantit√©</th>
      <th>Prix</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @order.cart.item_carts.each do |item_cart|%>
      <tr>
        <td><%= image_tag  item_cart.item.cat_image, alt: 'cat', class: "card-img-top", style: "width: 8rem; height: 9rem;"%></td>
        <td><%= item_cart.item.title%></td>
        <td><%= truncate(item_cart.item.description, length: 140) %></td>
        <td><%= item_cart.quantity%></td>
        <td><%= number_to_currency(item_cart.total_price) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <%= link_to items_path do %>
        <div style = "display:flex; flex-direction:row;">
          <div>
            <i class="far fa-caret-square-left fa-3x"></i>
          </div>
          <div style = "padding:10px">
            <p>Retourner aux produits</p>
          </div>
        </div>
      <% end %>
 </div>
</div>