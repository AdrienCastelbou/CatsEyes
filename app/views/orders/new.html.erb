
<div class = "row">
    <div class = "col-md-6 offset-md-3">
    <br><br><br>
    
<%= form_for(@order) do |f| %>
  <h2 class="h3 mb-3 font-weight-normal text-center">Ajouter une adresse</h2>
  
  <div class="form-group">
          <%= f.label :address %><br />
          <%= f.text_area :address, autocomplete: "new-password", class: "form-control" %>
    </div>

  <div class="form-actions">
    <%= f.submit "Passer au paiement", class: "btn btn-success" %>
  </div>
<% end %>


</div>
</div>
</div>


