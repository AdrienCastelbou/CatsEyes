<div class="tab-content" id="tabs-collapse">

        <div id="contact-inner" class="nopadding-lr dark-wrapper opaqued">

          <div class="section-inner dark-opaqued">
            <div class="text-center">
              <h2>Inscription</h2>
            </div>
            <br>
            <br>

            <div class="container">
              <div class="row" style = "display: flex; flex-direction: row; justify-content: center">
                  <div class="col-md-6">

                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= f.error_notification %>

                        <div class="form-inputs field text-center">
                          <%= f.email_field :email,
                                            class:"form-control",
                                            placeholder:"email",
                                            required: true,
                                            autofocus: true,
                                            input_html: { autocomplete: "email" }%>
                        </div>

                        <div class="form-inputs field text-center">
                          <%= f.password_field :password,
                                              class:"form-control",
                                              placeholder:"mot de passe",
                                              required: true,
                                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                              input_html: { autocomplete: "new-password" } %>
                        </div>

                        <div class="form-inputs field text-center">
                          <%= f.password_field :password_confirmation,
                                              class:"form-control",
                                              placeholder:"confirmation du mot de passe",
                                              required: true,
                                              input_html: { autocomplete: "new-password" } %>
                        </div>

                        <div class="form-actions text-center">
                          <%= f.button :submit, "Valider", class:"btn btn-primary mt30 btn-white"%>
                        </div>

                      <% end %>
                      <br>
                      <br>
                      <h3 class="text-center">Vous avez déjà un compte ?</h3>
                      <div class="text-center">
                        <%= render "devise/shared/links" %>
                      </div>

                  </div>
                </div>
              </div>

            </div>

          </div>
  </div>
