

        <div id="contact-inner" class="nopadding-lr dark-wrapper opaqued";">

          <div class="section-inner dark-opaqued">
            <div class="text-center">
              <h2>Connexion</h2>
            </div>
            <br>
            <br>

            <div class="container">
              <div class="row" style = "display: flex; flex-direction: row; justify-content: center">
                  <div class="col-md-6">

                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <%= f.error_notification %>

                        <div class="form-inputs field text-center">

                          <%= f.email_field :email,
                                            class:"form-control",
                                            placeholder:"email",
                                            required: false,
                                            autofocus: true,
                                            input_html: { autocomplete: "email" }%>
                        </div>

                        <div class="form-inputs field text-center">
                          <%= f.password_field :password,
                                              class:"form-control",
                                              placeholder:"mot de passe",
                                              required: false,
                                              input_html: { autocomplete: "current-password" } %>
                        </div>
                          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                        <div class="form-actions text-center">
                          <%= f.button :submit, "Se connecter", class:"btn btn-primary mt30 btn-white"%>
                        </div>

                      <% end %>
                      <br>
                      <br>
                      <h3 class="text-center">Vous n'avez pas de compte ?</h3>
                      <div class="text-center">
                        <%= render "devise/shared/links" %>
                      </div>

                  </div>
                </div>
              </div>

            </div>

          </div>
